<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrisoftApp.Pages.Admin.ModificarCliente"
             Title="Modificar Cliente"
             BackgroundColor="#1C375C">
    <ContentPage.Content>
        <ScrollView HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <Grid BackgroundColor="#1C375C" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackLayout Grid.Row="0" HorizontalOptions="Center">
                    <Image x:Name="LogoImage"
                           Margin="0,30"
                           Aspect="AspectFit"
                           HeightRequest="100"
                           Source="dotnet_bot.svg"
                           WidthRequest="80" />
                </StackLayout>

                <Frame Grid.Row="1"
                       Margin="0,0,0,-40"
                       BorderColor="#1C375C"
                       CornerRadius="50"
                       HasShadow="True"
                       VerticalOptions="FillAndExpand">
                    <Grid Padding="20,50,20,20"
                          HorizontalOptions="FillAndExpand"
                          RowSpacing="20"
                          VerticalOptions="FillAndExpand">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <!-- Extra row for spacing -->
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Label x:Name="WelcomeLabel"
                               Grid.Row="0"
                               FontAttributes="Bold"
                               FontSize="24"
                               HorizontalOptions="CenterAndExpand"
                               Text="Modificar Cliente"
                               TextColor="#1C375C" />

                        <Entry x:Name="NombreEntry"
                               Grid.Row="1"
                               Placeholder="Nombre"
                               HorizontalOptions="FillAndExpand"
                               VerticalOptions="Center" />

                        <Entry x:Name="DireccionEntry"
                               Grid.Row="2"
                               Placeholder="Dirección"
                               HorizontalOptions="FillAndExpand"
                               VerticalOptions="Center" />

                        <Entry x:Name="ProvinciaEntry"
                               Grid.Row="3"
                               Placeholder="Provincia"
                               HorizontalOptions="FillAndExpand"
                               VerticalOptions="Center" />

                        <Entry x:Name="LocalidadEntry"
                               Grid.Row="4"
                               Placeholder="Localidad"
                               HorizontalOptions="FillAndExpand"
                               VerticalOptions="Center" />

                        <Entry x:Name="CPostalEntry"
                               Grid.Row="5"
                               Placeholder="C.Postal"
                               HorizontalOptions="FillAndExpand"
                               VerticalOptions="Center" />

                        <Entry x:Name="EmailEntry"
                               Grid.Row="6"
                               Placeholder="Email"
                               HorizontalOptions="FillAndExpand"
                               VerticalOptions="Center" />

                        <Entry x:Name="PaisEntry"
                               Grid.Row="7"
                               Placeholder="País"
                               HorizontalOptions="FillAndExpand"
                               VerticalOptions="Center" />

                        <Entry x:Name="EnviadoEntry"
                               Grid.Row="8"
                               Placeholder="Enviado"
                               HorizontalOptions="FillAndExpand"
                               VerticalOptions="Center" />

                        <Entry x:Name="RutaEntry"
                               Grid.Row="9"
                               Placeholder="Ruta"
                               HorizontalOptions="FillAndExpand"
                               VerticalOptions="Center" />

                        <Entry x:Name="UbicacionEntry"
                               Grid.Row="10"
                               Placeholder="Ubicación"
                               HorizontalOptions="FillAndExpand"
                               VerticalOptions="Center" />

                        <Button x:Name="ModificarButton"
                                Grid.Row="11"
                                BackgroundColor="#1C375C"
                                CornerRadius="20"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="Center"
                                Text="Modificar"
                                Clicked="OnModificarTapped" />

                        <Button x:Name="VolverButton"
                                Grid.Row="12"
                                BackgroundColor="#1C375C"
                                CornerRadius="20"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="Center"
                                Text="Volver"
                                Clicked="OnVolverClicked" />
                    </Grid>
                </Frame>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
